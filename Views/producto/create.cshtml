@model lab_prac1.Models.producto

@{

    ViewData["title"] = "producto";
}

<h1>@ViewData["title"]</h1>

<div class="text-center">
<h1 class="display-4"> FORMULARIO DE REGISTRO DE VENTA DE VIDEO JUEGOS </h1>

<form asp-controller="producto" asp-action="create">

<label  class="form-label"></label>
<input  class="form-control form-control-sm" type="text" name="nombre" placeholder="ingrese nombre"/>

<label class="form-label"></label>
<input class="form-control form-control-sm" type="text" name="categoria" placeholder="ingrese categoria"/>

<label class="form-label"></label>
<input class="form-control form-control-sm" type="text" name="precio" placeholder="ingrese precio">

<label  class="form-label"></label>
<input  class="form-control form-control-sm" type="text" name="descuento" placeholder="ingrese descuento">

<div class="form-group">
<button type="submit" class="btn btn-primary" >registrar</button>

</div>

</form>

<h1>@ViewData["Message"]  </h1>

    <div>
<a asp-controller="producto" asp-Action="index">regresar a la lista</a>
    </div>
</div>

